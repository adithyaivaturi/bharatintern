<body>
    <div class="container">
        <form style="width: 100%; padding: 40px;">
            <fieldset style="border-radius: 10px;">
                <h2 align="center">Temperature Conversion</h2>
                <center>
                <label>
                    <select id="se">
                        <option>Celsius</option>
                        <option>Kelvin</option>
                        <option>Fahrenheit</option>
                    </select>
                </label><input type="text" placeholder="Enter value" id="one">
                <br>
                <h3>Convert to</h3>
                <label align="center">
                    <select id="con">
                        <option>Celsius</option>
                        <option>Kelvin</option>
                        <option>Fahrenheit</option>
                    </select>
                </label>
                <br>
                <br>
                <button id="submitButton" onclick="convert()" type="button"><b>Convert!</b></button>
                <h4 id="second"></h4></center>
            </fieldset>
        </form>
    </div>
    <script>
        function convert() {
            var inputUnit = document.getElementById("se").value;
            var outputUnit = document.getElementById("con").value;
            var inputValue = parseFloat(document.getElementById("one").value);
            var result=0;

            // Perform temperature conversion calculation here and update the result in the "second" input field
            if(inputUnit=="Celsius"){
                if(outputUnit==inputUnit){
                    result=inputValue + "°C" ;
                }
                else if(outputUnit=="Kelvin"){
                    result=(inputValue+273.15)+" K";
                }
                else{
                    result=((inputValue * (9/5)) + 32)+"°F";
                }
            }
            else if(inputUnit=="Kelvin"){
                if(outputUnit=="Celsius"){
                    result=(inputValue - 273.15)+ "°C";
                }
                else if(outputUnit=="Fahrenheit"){
                    result=((inputValue - 273.15) * 9/5 + 32)+ "°F";
                }
                else{
                    result=inputValue+" K";
                }
            }
            else{
                if(outputUnit=="Celsius"){
                    result=((inputValue - 32) * 5/9)+ "°C";
                }
                else if(outputUnit=="Kelvin"){
                    result=((inputValue - 32) * 5/9 + 273.15)+ "°K";
                }
                else{
                    result=(inputValue)+"°F";
                }
            }

            document.getElementById("second").innerHTML = "Result's " +result;
        }
    </script>
